{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/trpc/(.*)", "dest": "/api/trpc/[trpc]" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
